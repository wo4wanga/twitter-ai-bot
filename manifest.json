{
  "manifest_version": 3,
  "name": "Twitter AI Bot",
  "version": "2.1.0",
  "description": "自动识别 X (Twitter) 热门推文并通过 AI API 生成高质量回复",
  
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://*/*"
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_title": "打开 Twitter AI Bot 侧边栏"
  }
}
